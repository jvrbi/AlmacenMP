<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalidasFragment"
    android:id="@+id/swipereacomodar">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="210dp"
            android:layout_height="20pt"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="70dp"
            android:text="@string/materia_prima"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginStart="5dp" />
        <EditText
            android:id="@+id/matprireacomodo"
            android:layout_width="75pt"
            android:textColor="@android:color/black"
            android:layout_gravity="left"
            android:layout_height="20pt"
            android:textSize="15sp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="220dp"
            android:inputType="textFilter|textCapCharacters"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="170dp">
            <ListView
                android:id="@+id/listareacomodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ListView>
        </LinearLayout>
        <LinearLayout  android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="125dp"
            android:orientation="horizontal">

        </LinearLayout>
    </FrameLayout>
</android.support.v4.widget.SwipeRefreshLayout>